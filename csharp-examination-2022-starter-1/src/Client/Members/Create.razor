@page "/member/create"

<h3 class="title">
    Add Member
</h3>
    <div class="columns">
        <div class="column">
            <div class="field">
                <label class="label">Gender</label>
                <div class="select is-fullwidth">
                    <select>
                        <option>Male</option>
                        <option>Female</option>
                        <option>Other</option>
                    </select>
                </div>
            </div>

            <div class="field">
                <label class="label">Firstname</label>
                <div class="control">
                    <input class="input"/>
                </div>
            </div>

            <div class="field">
                <label class="label">Lastname</label>
                <div class="control">
                    <input class="input" />
                </div>
            </div>
        </div>
        <div class="column">
            <div class="field">
                <label class="label">Date of birth</label>
                <div class="control">
                    <input class="input" />
                </div>
            </div>
            <div class="field">
                <label class="label">Email</label>
                <div class="control">
                    <input class="input" />
                </div>
            </div>

            <div class="field">
                <label class="label">Phone</label>
                <div class="control">
                    <input class="input" />
                </div>
            </div>
        </div>
    </div>



    <div class="field is-grouped is-grouped-right">
        <div class="control">
            <button class="button is-link is-fullwidth" type="submit">
                Add
            </button>
        </div>

        <div class="control">
            <a href="/" class="button is-link is-light is-fullwidth">
                Cancel
            </a>
        </div>
    </div>
